									"pm.test(\"Login successful\", function() {\n    pm.response.to.have.status(200);\n    pm.expect(pm.response.headers.get(\"Set-Cookie\")).to.include(\"auth-token\");\n});\n\nvar cookie = pm.response.headers.get(\"Set-Cookie\");\nif (cookie) {\n    var jwtCookie = cookie.match(/auth-token=([^;]+)/);\n    if (jwtCookie && jwtCookie[1]) {\n        pm.collectionVariables.set(\"admin_token\", jwtCookie[1]);\n        console.log(\"Admin token saved: \" + jwtCookie[1].substring(0, 20) + \"...\");\n    }\n}"
